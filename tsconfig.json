{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // Having some errors from SortableJS types, fixed by disabling .d.ts files checking
    // See https://github.com/SortableJS/react-sortablejs/issues/186
    // Remove skipLibCheck once the issue is fixed.
    "skipLibCheck": true,
    // Preserving old behavior after moving to TypeScript ^4.4
    // https://www.typescriptlang.org/tsconfig#useUnknownInCatchVariables
    "useUnknownInCatchVariables": false,
  },
  "exclude": [
    "node_modules", "**/dist"
  ]
}
